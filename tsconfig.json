{
  "exclude": ["dist", "node_modules"],
  "include": ["src"],
  "compilerOptions": {
    // ESM-only library build
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": true,
    "esModuleInterop": true,

    // Interop & correctness
    "forceConsistentCasingInFileNames": true,

    // React JSX transform
    "jsx": "react-jsx",

    // Target & libs
    "lib": ["dom", "esnext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",

    // Strictness
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    // Emit locations
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext"
  }
}
